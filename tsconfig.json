{
  "compilerOptions": {
    "module": "esnext",       // Allows ES modules
    "target": "es2022",       // Target modern JavaScript for top-level await
    "lib": ["es2022"],        // Include ES2022 features
    "moduleResolution": "node", // Resolve modules in Node.js style
    "strict": true,           // Enables strict type-checking
    "esModuleInterop": true,  // Ensures compatibility with CommonJS modules
    "skipLibCheck": true,     // Optional: Skip type checks for libraries
    "outDir": "./dist",       // Optional: Set output directory for compiled JS
    "resolveJsonModule": true // Optional: Enable importing JSON files
  },
  "include": ["src/**/*"],    // Include all TS files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
